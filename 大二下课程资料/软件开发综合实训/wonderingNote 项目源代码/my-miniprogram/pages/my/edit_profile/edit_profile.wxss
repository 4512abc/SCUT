/* edit_profile.wxss */
.container {
  background: #f8f8f8;
  min-height: 100vh;
  padding-bottom: 120rpx;
  padding-top: calc(var(--status-bar-height) + 44px); /* 44px是导航栏标准高度 */
}

.avatar-section {
  position: relative;
  margin: 60rpx auto;
  width: 180rpx;
  height: 180rpx;
}

.avatar {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  box-shadow: 0 8rpx 24rpx rgba(0,0,0,0.1);
}

.camera-icon {
  position: absolute;
  right: 0;
  bottom: 0;
  background: #1890ff;
  width: 56rpx;
  height: 56rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 12rpx rgba(24,144,255,0.3);
}

.form-container {
  background: #fff;
  border-radius: 16rpx;
  margin: 0 30rpx;
  padding: 30rpx;
}

.form-item {
  margin-bottom: 36rpx;
}

.label {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 16rpx;
}

.input, .textarea, .picker {
  width: 100%;
  background: #f8f8f8;
  border-radius: 8rpx;
  font-size: 30rpx;
  color: #333;
}

.input {
  height: 88rpx;
  padding: 0 24rpx;
}

.textarea {
  height: 160rpx;
  padding: 20rpx 24rpx;
}

.picker {
  height: 88rpx;
  padding: 0 24rpx;
  display: flex;
  align-items: center;
}

.gender-selector {
  display: flex;
  gap: 30rpx;
  padding: 20rpx 0;
}

.gender-option {
  display: flex;
  align-items: center;
  gap: 12rpx;
  padding: 16rpx 24rpx;
  border-radius: 8rpx;
  background: #f8f8f8;
  transition: all 0.3s;
}

.gender-option.active {
  background: #e6f7ff;
}

.gender-text {
  font-size: 28rpx;
  color: #333;
}

.gender-option.active .gender-text {
  color: #1890ff;
}

.char-count {
  text-align: right;
  font-size: 24rpx;
  color: #999;
  margin-top: 8rpx;
}

.save-btn {
  margin: 48rpx 30rpx !important;
  border-radius: 44rpx !important;
  height: 88rpx !important;
  line-height: 88rpx !important;
  font-size: 32rpx !important;
  background: #1890ff !important;
  border: none !important;
}

/* 自定义导航栏样式 */
.custom-nav-bar {
  width: 100%;
  background: #ffffff;
  position: fixed;
  top: 0;
  z-index: 1000;
}

.nav-bar-content {
  height: 44px;
  display: flex;
  align-items: center;
  padding: 0 15px;
}

.nav-btn {
  padding: 8px;
}

.title {
  flex: 1;
  text-align: center;
  font-size: 17px;
  color: #000;
  padding-right: 40px;
}

/* 地区选择器样式 */
.picker {
  padding: 12px 0;
  color: #333;
  font-size: 16px;
}

.picker:empty::before {
  content: '请选择所在地区';
  color: #999;
}

/* 表单项样式 */
.form-item {
  margin-bottom: 20px;
  border-bottom: 1px solid #f5f5f5;
  padding-bottom: 15px;
}

.label {
  display: block;
  margin-bottom: 8px;
  color: #666;
  font-size: 14px;
}

.hint-text {
  font-size: 12px;
  color: #ff9900;
  margin-top: 5px;
}

.face-section {
  margin-top: 30rpx;
}
.hint-text {
  font-size: 24rpx;
  color: #999;
  text-align: center;
  margin-top: 10rpx;
}

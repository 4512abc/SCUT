/* forget_password.wxss */
.container {
  padding: 40rpx;
  min-height: 100vh;
  background: #f8f8f8;
}

.steps {
  margin-bottom: 60rpx;
}

.form-container {
  background: #fff;
  border-radius: 16rpx;
  padding: 40rpx 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.05);
}

.custom-field {
  padding: 30rpx 0;
  border-bottom: 1rpx solid #eee;
}

.submit-btn {
  margin-top: 60rpx;
  border-radius: 50rpx !important;
  background: linear-gradient(90deg, #07c160, #20c997) !important;
  border: none !important;
}

.error-tips {
  color: #ee0a24;
  font-size: 24rpx;
  padding-left: 30rpx;
  margin: 10rpx 0;
}

.back-login {
  text-align: center;
  color: #07c160;
  font-size: 28rpx;
  margin-top: 40rpx;
  text-decoration: underline;
}

.success-container {
  text-align: center;
  padding: 60rpx 0;
}

.success-icon {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 30rpx;
}

.success-text {
  color: #07c160;
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.success-tip {
  color: #999;
  font-size: 28rpx;
}
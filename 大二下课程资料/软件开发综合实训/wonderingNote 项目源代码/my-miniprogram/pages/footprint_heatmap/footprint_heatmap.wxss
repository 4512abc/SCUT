.container {
  min-height: 100vh;
  background: #f7f8fa;
}

/* 自定义导航栏样式 */
.nav-bar {
  background: #fff !important;
  box-shadow: 0 1px 6px rgba(0,0,0,0.1);
}

.nav-bar-title {
  font-weight: 500 !important;
  font-size: 16px !important;
}

.content {
  padding: 15px;
}

.map-card {
  width: 100%;
  border-radius: 12px;
  overflow: hidden;
  box-shadow: 0 2px 12px rgba(0,0,0,0.08);
  background: #fff;
  position: relative;
}

.map-card map {
  width: 100% !important;
  height: 100% !important;
  position: absolute;
  top: 0;
  left: 0;
  transform: translate3d(0,0,0);
  z-index: 1;
}

.stats-card {
  margin: 15px;
  padding: 20px;
  background: #fff;
  border-radius: 12px;
  display: flex;
  justify-content: space-around;
  box-shadow: 0 2px 12px rgba(0,0,0,0.08);
}

.stats-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stats-num {
  font-size: 20px;
  font-weight: bold;
  color: #333;
  margin-bottom: 4px;
}

.stats-label {
  font-size: 12px;
  color: #999;
}

.popup-header {
  padding: 16px;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1px solid #eee;
  position: relative;
}

.header-right {
  display: flex;
  align-items: center;
  gap: 16px;
}

.toggle-button-group {
  display: flex;
  background-color: #f5f5f5;
  border-radius: 20px;
  padding: 2px;
}

.toggle-button {
  padding: 6px 12px;
  font-size: 12px;
  color: #666;
  border-radius: 18px;
  transition: all 0.3s ease;
}

.toggle-button.active {
  background-color: #2d8cf0;
  color: #fff;
  box-shadow: 0 2px 6px rgba(45, 140, 240, 0.2);
}

.location-info {
  display: flex;
  flex-direction: column;
}

.location-name {
  font-size: 16px;
  font-weight: 500;
  color: #333;
  margin-bottom: 4px;
}

.location-count {
  font-size: 12px;
  color: #999;
}

.blog-list {
  padding: 15px;
  max-height: calc(80vh - 60px);
}

.blog-item {
  background: #fff;
  border-radius: 8px;
  margin-bottom: 15px;
  overflow: hidden;
}

.blog-cover {
  width: 100%;
  height: 180px;
}

.blog-content {
  padding: 12px;
}

.blog-title {
  font-size: 16px;
  font-weight: bold;
  margin-bottom: 8px;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
}

.blog-desc {
  font-size: 14px;
  color: #666;
  margin-bottom: 8px;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.tag-list {
  display: flex;
  flex-wrap: wrap;
  gap: 8px;
  margin-bottom: 12px;
}

.tag-item {
  font-size: 12px;
  color: #666;
  background: #f5f5f5;
  padding: 4px 8px;
  border-radius: 12px;
}

.blog-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.blog-time {
  font-size: 12px;
  color: #999;
}

.interaction-info {
  display: flex;
  gap: 12px;
}

.info-item {
  display: flex;
  align-items: center;
  gap: 4px;
  color: #999;
  font-size: 12px;
}

/* 地点列表弹窗样式 */
.places-container {
  position: relative;
  width: 100%;
  height: 100%;
}

.map-bg {
  position: absolute;
  width: 100%;
  height: 100%;
  z-index: 0;
}

.control-bar {
  position: relative;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 32rpx;
  z-index: 2;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #fff;
  text-shadow: 0 2rpx 4rpx rgba(0,0,0,0.3);
}

.places-scatter {
  position: relative;
  width: 100%;
  height: calc(100% - 100rpx);
  z-index: 1;
}

.place-card {
  position: absolute;
  padding: 16rpx 24rpx;
  background: rgba(255,255,255,0.9);
  border-radius: 40rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.1);
  transform: translate(-50%, -50%);
  transition: all 0.3s ease;
  z-index: 1;
}

.place-card.active {
  background: #07c160;
  box-shadow: 0 4rpx 16rpx rgba(7,193,96,0.3);
  z-index: 2;
}

.place-name {
  font-size: 28rpx;
  color: #333;
  white-space: nowrap;
}

.place-card.active .place-name {
  color: #fff;
}

.place-card {
  transform: translate(-50%, -50%) scale(1);
  transition: all 0.2s ease;
}

.place-card:active {
  transform: translate(-50%, -50%) scale(0.95);
}

.bg-mask {
  position: absolute;
  width: 100%;
  height: 100%;
  background: rgba(0,0,0,0.2);
  z-index: 0;
}
.container {
  background: #f8f8f8;
  min-height: 100vh;
  padding-bottom: 120rpx;
}

/* 顶部导航 */
.header {
  background: #fff;
  position: sticky;
  top: 0;
  z-index: 99;
}

.nav-bar {
  background-color: #fff !important;
}

.nav-title {
  font-weight: bold !important;
  font-size: 36rpx !important;
}

.search-bar {
  padding: 20rpx 30rpx !important;
}

/* 挑战列表 */
.challenge-list {
  padding: 30rpx;
}

.challenge-item {
  background: #fff;
  border-radius: 16rpx;
  margin-bottom: 30rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.1);
}

.challenge-cover {
  width: 100%;
  height: 360rpx;
}

.challenge-content {
  padding: 20rpx;
}

.challenge-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 12rpx;
}

.challenge-desc {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 20rpx;
}

.tag-list {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  margin-bottom: 20rpx;
}

.tag-item {
  font-size: 24rpx;
  color: #666;
  background-color: #f5f5f5;
  padding: 4rpx 16rpx;
  border-radius: 20rpx;
}

.challenge-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.user-info {
  display: flex;
  align-items: center;
}

.avatar {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  margin-right: 12rpx;
}

.username {
  font-size: 28rpx;
  color: #333;
}

.interaction-info {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.info-item {
  display: flex;
  align-items: center;
  gap: 4rpx;
}

.info-item .count {
  font-size: 24rpx;
  color: #666;
}

.end-time {
  color: #ff4444;
}


/* 发起挑战按钮 */  
.write-btn {
  position: fixed !important;
  right: 40rpx !important;
  bottom: 40rpx !important;
  padding: 20rpx 40rpx !important;
  font-size: 28rpx !important;
  box-shadow: 0 4rpx 12rpx rgba(25,137,250,0.3) !important;
}

/* 搜索容器 */
.search-container {
  padding: 10px 15px;
  background: #fff;
}

/* 时间搜索 */
.time-search {
  display: flex;
  align-items: center;
  margin-top: 10px;
  font-size: 14px;
}

.time-item {
  padding: 5px 10px;
  border-radius: 4px;
  border: 1px solid #eee;
  color: #666;
}

.time-item.active {
  border-color: #1989fa;
  color: #1989fa;
}

.time-item[disabled] {
  opacity: 0.5;
  pointer-events: none;
}

/* 搜索状态提示 */
.search-status {
  padding: 10px 15px;
  background: #f7f7f7;
  font-size: 13px;
  color: #666;
}

.search-tips {
  display: flex;
  flex-wrap: wrap;
  align-items: center;
}

.clear-all {
  margin-left: 10px;
  color: #1989fa;
}
/* pages/create_challenge/create_challenge.wxss */
.container {
  background: #f8f8f8;
  min-height: 100vh;
  padding-bottom: 120rpx;
}

/* 导航栏样式 */
.custom-nav {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  background: #fff;
  position: relative;
  z-index: 10;
}
.nav-bar {
  background-color: #fff !important;
}

.nav-title {
  font-weight: bold !important;
  font-size: 36rpx !important;
}
.gesture-picker {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx;
  background: #f8f8f8;
  border-radius: 8rpx;
  font-size: 28rpx;
}

.nav-title {
  font-size: 36rpx;
  font-weight: 500;
  color: #333;
}

.nav-time {
  font-size: 32rpx;
  color: #666;
}

/* 地图容器样式 */
.map-container {
  position: relative;
  height: 400rpx;
  margin: 20rpx;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  z-index: 1;
}

.map {
  width: 100%;
  height: 100%;
}

/* 地图提示层 */
.map-hint {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.3);
  z-index: 99;
  display: flex;
  justify-content: center;
  align-items: center;
}

.hint-content {
  background-color: #fff;
  padding: 20rpx 30rpx;
  border-radius: 12rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.hint-text {
  margin-top: 10rpx;
  font-size: 28rpx;
  color: #333;
}

/* 坐标显示样式 */
.coordinates-display {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: rgba(255, 255, 255, 0.9);
  padding: 16rpx;
  font-size: 24rpx;
  text-align: center;
  color: #666;
  z-index: 15;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.landmark-name {
  font-weight: bold;
  color: #07C160;
}

/* 地图控件 */
.map-controls {
  position: absolute;
  right: 20rpx;
  bottom: 20rpx;
  z-index: 15;
}

.recenter-btn {
  width: 80rpx;
  height: 80rpx;
  background-color: #fff;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.recenter-icon {
  width: 40rpx;
  height: 40rpx;
}

/* 表单区域 */
.form-container {
  height: calc(100vh - 600rpx);
  padding: 0 20rpx;
  background: #f8f8f8;
}

.form-item {
  padding: 30rpx;
  border-bottom: 1rpx solid #eee;
  background: #fff;
  margin-bottom: 20rpx;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.form-label {
  display: block;
  font-size: 32rpx;
  color: #333;
  margin-bottom: 20rpx;
  font-weight: 500;
}

.input {
  width: 100%;
  height: 80rpx;
  padding: 0 20rpx;
  background: #f8f8f8;
  border-radius: 8rpx;
  font-size: 28rpx;
}

.textarea {
  width: 100%;
  height: 160rpx;
  padding: 20rpx;
  background: #f8f8f8;
  border-radius: 8rpx;
  font-size: 28rpx;
}

.word-count {
  display: block;
  text-align: right;
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
}

/* 选择器样式 */
.picker {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx;
  background: #f8f8f8;
  border-radius: 8rpx;
  font-size: 28rpx;
}

/* 群组列表 */
.group-list {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.group-item {
  background: #f0f9ff;
  padding: 12rpx 24rpx;
  border-radius: 40rpx;
  font-size: 26rpx;
  color: #1989fa;
  display: flex;
  align-items: center;
}

/* 提交按钮 */
.submit-btn {
  position: fixed;
  bottom: 30rpx;
  left: 30rpx;
  right: 30rpx;
  border-radius: 48rpx;
  font-size: 32rpx;
  font-weight: 500;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}

/* 单选按钮组样式 */
.van-radio-group {
  display: flex;
  gap: 40rpx;
}

.van-radio {
  display: flex;
  align-items: center;
}

/* 开关样式调整 */
.van-switch {
  float: right;
}

/* 时间选择器样式 */
.time-picker {
  display: flex;
  justify-content: space-between;
}

/* 特殊打卡选择样式 */
.upload-area {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 200rpx;
  border: 2rpx dashed #ccc;
  border-radius: 16rpx;
  color: #666;
}

.object-preview {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.object-preview image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 20rpx;
}

.object-preview text {
  margin-bottom: 20rpx;
  font-size: 28rpx;
}

/* 人脸识别样式 */
.face-verify {
  display: flex;
  flex-direction: column;
}

.face-verify-container {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.face-tip {
  margin-top: 10rpx;
  font-size: 24rpx;
  color: #ff976a;
  align-self: flex-end;
}

.picker {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 10px 15px;
  background-color: #fff;
  border-radius: 4px;
}

/* Vant 选择器默认样式覆盖 */
.custom-datetime-picker .van-picker__toolbar {
  background-color: #f7f8fa;
}

/* 时间选择器头部样式 */
.picker-header {
  padding: 16px;
  background: #f7f8fa;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1px solid #ebedf0;
}

.picker-title {
  font-size: 16px;
  font-weight: bold;
  color: #333;
}

.picker-hint {
  font-size: 14px;
  color: #999;
}

/* 调整选择器内部样式 */
.van-picker__toolbar {
  background: #f7f8fa !important;
}

.van-picker-column__item {
  color: #333 !important;
}

.van-picker__confirm {
  color: #07C160 !important;
}
/* 群组头部样式 */
.group-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

/* 群组列表样式 */
.group-list {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  min-height: 80rpx;
  align-items: center;
}

.group-item {
  background: #f0f9ff;
  padding: 12rpx 24rpx;
  border-radius: 40rpx;
  font-size: 26rpx;
  color: #1989fa;
  display: flex;
  align-items: center;
}

.group-empty {
  color: #999;
  font-size: 26rpx;
}

/* 群组选择弹窗样式 */
.group-picker-container {
  height: calc(40vh - 120rpx); /* 新高度减去头部高度 */
  padding: 20rpx;
}

/* 单选群组样式调整 */
.group-option {
  position: relative;
  padding-right: 60rpx;
}

.group-option.selected {
  background-color: #f5f5f5;
}

.group-logo {
  width: 80rpx;
  height: 80rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
}

.group-info {
  flex: 1;
}

.group-name {
  font-size: 30rpx;
  color: #333;
  margin-bottom: 8rpx;
  display: block;
}

.group-meta {
  font-size: 24rpx;
  color: #999;
}

.picker-footer {
  padding: 20rpx;
  border-top: 1rpx solid #f0f0f0;
}

.loading-text {
  text-align: center;
  padding: 40rpx;
  color: #999;
}

.empty-tip {
  text-align: center;
  padding: 40rpx;
  color: #999;
}
.group-option .van-icon {
  position: absolute;
  right: 20rpx;
  top: 50%;
  transform: translateY(-50%);
}
/* 已选群组标签样式 */
.group-item {
  background: #f0f9ff;
  padding: 12rpx 24rpx;
  border-radius: 40rpx;
  font-size: 26rpx;
  color: #1989fa;
  display: inline-flex;
  align-items: center;
  margin-right: 16rpx;
}

.group-item .van-icon {
  margin-left: 8rpx;
}

/* 遮罩层样式 */
.popup-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.1);
}

/* 弹窗内容容器 */
.popup-content {
  position: relative;
  z-index: 1000; /* 确保内容在遮罩层上方 */
  height: 40vh;
  background: #fff;
  border-radius: 16rpx 16rpx 0 0;
  overflow: hidden;
}

/* 调整 van-popup 的默认样式 */
.van-popup {
  background: transparent !important;
  overflow: visible !important;
}

/* 时间选择器专用遮罩 */
.time-picker-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 999;
}

/* 弹窗样式调整 */
.time-picker-popup {
  z-index: 1000 !important;
  position: fixed !important;
}

/* 必填项标识 */
.form-item.required .form-label::after {
  content: "*";
  color: #ee0a24;
  margin-left: 4px;
}

/* 错误提示样式 */
.error-message {
  background-color: #fff8f8;
  color: #ee0a24;
  padding: 12px 16px;
  margin-bottom: 12px;
  border-radius: 4px;
  display: flex;
  align-items: center;
  font-size: 14px;
}

.error-message van-icon {
  margin-right: 6px;
}

/* 无效状态的输入框 */
.form-item.invalid .input,
.form-item.invalid .textarea,
.form-item.invalid .picker {
  border-color: #ee0a24;
}

.error-message {
  background-color: #fff8f8;
  color: #ee0a24;
  padding: 12px 16px;
  margin: 10px 15px;
  border-radius: 8px;
  display: flex;
  align-items: center;
  font-size: 14px;
  border: 1px solid #ffebee;
  animation: fadeIn 0.3s ease;
}

.error-message van-icon {
  margin-right: 8px;
  flex-shrink: 0;
}

@keyframes fadeIn {
  from { opacity: 0; transform: translateY(-10px); }
  to { opacity: 1; transform: translateY(0); }
}

/* 自定义范围输入样式 */
.custom-range-input {
  display: flex;
  align-items: center;
  margin-top: 10px;
  padding: 0 15px;
  background: #f7f7f7;
  border-radius: 8px;
}

.custom-range-input .van-field {
  flex: 1;
  padding: 8px 0;
}

.custom-range-input .unit {
  margin-left: 8px;
  color: #666;
}

/* 自定义范围弹窗样式 */
.custom-range-popup {
  display: flex;
  flex-direction: column;
  height: 100%;
  padding: 20px;
  box-sizing: border-box;
}

.popup-header {
  text-align: center;
  margin-bottom: 20px;
}

.popup-title {
  font-size: 16px;
  font-weight: bold;
}

.popup-content {
  flex: 1;
  display: flex;
  align-items: center;
  margin-bottom: 20px;
}

.popup-content .van-field {
  flex: 1;
  margin-right: 10px;
}

.popup-content .unit {
  color: #666;
}

.popup-footer {
  display: flex;
  justify-content: space-between;
}

.popup-footer .van-button {
  width: 48%;
}

/* 物体识别引导弹窗 - 专用样式 */
.object-guide-popup {
  padding: 30rpx;
  box-sizing: border-box;
  width: 90%; /* 相对屏幕宽度，自适应 */
  max-width: 600rpx; /* 限制最大宽度，防止过宽 */
  margin: 0 auto; /* 居中 */
  background-color: #fff; /* 如果需要强制背景色 */
  border-radius: 16rpx; /* 可选：加点圆角美观 */
}

.object-guide-header {
  text-align: center;
  margin-bottom: 30rpx;
}

.object-guide-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.object-guide-content {
  margin-bottom: 40rpx;
  padding: 0 20rpx;
}

.object-guide-item {
  display: flex;
  align-items: flex-start;
  margin-bottom: 24rpx;
  font-size: 28rpx;
  line-height: 1.6;
  color: #666;
}

.object-guide-item .van-icon {
  margin-right: 16rpx;
  margin-top: 4rpx;
  flex-shrink: 0;
}

.object-guide-footer {
  display: flex;
  justify-content: space-between;
  padding-top: 20rpx;
  border-top: 1rpx solid #eee;
  align-items: center;
  justify-content: center; /* 中间对齐按钮 */
}

.object-guide-footer .van-button {
  height: 80rpx;
  line-height: 80rpx;
  padding: 0 40rpx; /* 可选：让按钮宽度更美观 */
  width: auto; /* 或移除 width: 100% */
}

.object-guide-cancel {
  border-color: #ccc !important;
  color: #666 !important;
}

.object-guide-confirm {
  background-color: #07C160 !important;
  border-color: #07C160 !important;
}

/* 仅弹窗背景透明，文字保持清晰 */
.transparent-popup {
  background-color: rgba(255,255,255,0.4); /* 90%不透明 */
  backdrop-filter: blur(10px); /* 可选：背景模糊效果 */
}

/* 图片上传样式 */
.image-uploader {
  display: flex;
  flex-wrap: wrap;
  gap: 15rpx;
  margin-top: 20rpx;
}

.upload-btn {
  width: 220rpx;
  height: 220rpx;
  border: 2rpx dashed #ddd;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  color: #666;
  font-size: 28rpx;
}
/* 修改后的删除按钮样式 */
.delete-wrapper {
  position: absolute;
  right: 10rpx;
  top: 10rpx;
  width: 40rpx;
  height: 40rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 10;
}
/* 图片预览区域调整 */
.image-preview {
  position: relative;
  width: 220rpx;
  height: 220rpx;
  border-radius: 12rpx;
  overflow: hidden;
}

.image-preview image {
  width: 100%;
  height: 100%;
}

.delete-icon {
  position: absolute;
  right: 10rpx;
  top: 10rpx;
  color: #fff;
  background: rgba(0,0,0,0.5);
  border-radius: 50%;
  padding: 8rpx;
}

.uploading-text {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #999;
  font-size: 28rpx;
  margin-top: 10rpx;
}

.uploading-text text {
  margin-left: 10rpx;
}
/* blog_detail.wxss */
.container {
  background: #f8f8f8;
  min-height: 100vh;
  padding-bottom: calc(120rpx + env(safe-area-inset-bottom));
}

/* 导航栏样式 */
.nav-bar {
  background: #fff !important;
}

.nav-title {
  font-weight: bold !important;
  font-size: 32rpx !important;
}

/* 日期栏 */
.date-bar {
  padding: 32rpx;
  background: #fff;
  border-bottom: 1rpx solid #f0f0f0;
}

.time {
  font-size: 36rpx;
  color: #333;
  font-weight: 500;
  margin-right: 16rpx;
}

.full-date {
  font-size: 24rpx;
  color: #999;
}

/* 内容区 */
.content-wrapper {
  height: calc(100vh - 200rpx);
}

/* 标题区 */
.title-section {
  padding: 32rpx;
  background: #fff;
  margin-bottom: 16rpx;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 24rpx;
}

.info-section {
  display: flex;
  flex-wrap: wrap;
  gap: 24rpx;
}

.info-item {
  display: flex;
  align-items: center;
  gap: 8rpx;
  font-size: 26rpx;
  color: #666;
}

/* 标签区 */
.tags-section {
  padding: 24rpx 32rpx;
  background: #fff;
  margin-bottom: 16rpx;
}

.tag-list {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.tag-item {
  font-size: 24rpx;
  color: #1989fa;
  background: rgba(25, 137, 250, 0.1);
  padding: 8rpx 24rpx;
  border-radius: 24rpx;
}

/* 正文区 */
.content-section {
  padding: 32rpx;
  background: #fff;
  margin-bottom: 16rpx;
}

.paragraph {
  font-size: 30rpx;
  line-height: 1.8;
  color: #333;
  text-align: justify;
}

/* 媒体区 */
.media-section {
  padding: 32rpx;
  background: #fff;
  margin-bottom: 16rpx;
}

.media-type-tag {
  display: inline-block;
  padding: 8rpx 24rpx;
  background: #f5f5f5;
  border-radius: 24rpx;
  font-size: 24rpx;
  color: #666;
  margin-bottom: 16rpx;
}

.image-list {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 8rpx;
}

.content-image {
  width: 100%;
  height: 200rpx;
  border-radius: 8rpx;
  background-color: #f5f5f5;
}

.content-video {
  width: 100%;
  height: 400rpx;
  border-radius: 8rpx;
  background-color: #f5f5f5;
}

/* ================= 评论区 ================= */
.comments-section {
  padding: 32rpx;
  background: #fff;
  margin-bottom: 16rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 24rpx;
  color: #333;
}

.comment-list {
  margin-bottom: 32rpx;
}

/* 评论项基础样式 */
.comment-item {
  padding: 24rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

/* 根评论 */
.root-comment {
  display: flex;
  margin-bottom: 10rpx;
}

/* 子评论 */
.sub-comment {
  display: flex;
  margin-left: 80rpx;
  margin-top: 10rpx;
  padding: 10rpx 0;
}

.sub-comment.first {
  border-left: 2rpx solid #eee;
  padding-left: 20rpx;
}

/* 查看更多回复 */
.view-more {
  color: #576b95;
  font-size: 24rpx;
  padding: 10rpx 0 10rpx 80rpx;
  display: flex;
  align-items: center;
}

.view-more text {
  margin-right: 10rpx;
}

/* 子评论列表 */
.sub-comment-list {
  margin-left: 80rpx;
  border-left: 2rpx solid #eee;
  padding-left: 20rpx;
}

.sub-comment-item {
  display: flex;
  padding: 15rpx 0;
}

/* 公共样式 */
.avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  flex-shrink: 0;
  background-color: #f5f5f5;
}

.comment-content {
  flex: 1;
  font-size: 28rpx;
}

.comment-header {
  display: flex;
  align-items: center;
  margin-bottom: 8rpx;
}

.username {
  font-size: 26rpx;
  color: #576b95;
  margin-right: 15rpx;
  font-weight: 500;
}

.time {
  font-size: 22rpx;
  color: #999;
}

.comment-text {
  font-size: 28rpx;
  line-height: 1.5;
  word-break: break-all;
  color: #333;
}

/* 评论操作 */
.comment-actions {
  margin-top: 10rpx;
  display: flex;
}

.reply-btn {
  display: flex;
  align-items: center;
  color: #666;
  font-size: 24rpx;
  position: relative;
  z-index: 1; /* 确保按钮可点击 */
}

.reply-btn text {
  margin-left: 5rpx;
}

/* 加载状态 */
.loading-more-comments {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 20rpx;
  color: #999;
}

.loading-more-comments text {
  margin-left: 10rpx;
}

.loading-more {
  margin-left: 10rpx;
}

/* 无评论样式 */
.no-comment {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 60rpx 0;
  color: #999;
}

.no-comment image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 20rpx;
}

.no-more {
  text-align: center;
  padding: 30rpx;
  color: #999;
  font-size: 24rpx;
}

/* 底部操作栏样式 */
.footer-bar {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  padding: 16rpx 32rpx calc(16rpx + env(safe-area-inset-bottom));
  background: #fff;
  border-top: 1rpx solid #f0f0f0;
  display: flex;
  justify-content: space-around;
  align-items: center;
  z-index: 100;
}

.action-button {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 4rpx;
}

.action-text {
  font-size: 24rpx;
  color: #666;
}

.share-button {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 4rpx;
  padding: 0;
  margin: 0;
  background: none;
  border: none;
  line-height: 1;
}

.share-button::after {
  display: none;
}

/* 评论输入区域样式 */
.comment-input-section {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  background: #fff;
  padding: 24rpx 24rpx calc(24rpx + env(safe-area-inset-bottom));
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
  transform: translateY(120%);
  transition: all 0.3s ease;
  visibility: hidden;
  opacity: 0;
  z-index: 1000;
}

.comment-input-section.show {
  transform: translateY(0);
  visibility: visible;
  opacity: 1;
}

/* 遮罩层 */
.mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 999;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s ease;
}

.mask.show {
  opacity: 1;
  visibility: visible;
}

.submit-btn {
  padding: 0 32rpx;
}

.comment-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
}

/* 加载状态 */
.loading {
  padding: 40rpx 0;
}

/* 图片加载状态 */
.image-loading {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

/* ================= 暗黑模式适配 ================= */
@media (prefers-color-scheme: dark) {
  .container {
    background: #000;
  }
  
  .nav-bar {
    background: #1c1c1e !important;
  }

  .date-bar,
  .title-section,
  .tags-section,
  .content-section,
  .media-section,
  .comments-section,
  .footer-bar,
  .comment-input-section {
    background: #1c1c1e;
    border-color: #333 !important;
  }

  .time,
  .title,
  .username,
  .paragraph,
  .comment-text,
  .section-title {
    color: #fff;
  }

  .full-date,
  .info-item,
  .time,
  .count {
    color: #8e8e93;
  }

  .media-type-tag {
    background: #2c2c2e;
    color: #8e8e93;
  }

  .comment-input {
    background: #2c2c2e;
    color: #fff;
  }

  .content-image,
  .avatar {
    background-color: #2c2c2e;
  }

  .sub-comment.first,
  .sub-comment-list {
    border-left-color: #333;
  }

  .view-more {
    color: #8e8e93;
  }

  .share-btn {
    color: #8e8e93;
  }
}


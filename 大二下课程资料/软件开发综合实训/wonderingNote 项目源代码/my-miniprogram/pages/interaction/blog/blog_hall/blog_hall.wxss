/* blog_hall.wxss */
.container {
  background: #f8f8f8;
  min-height: 100vh;
  padding-bottom: 120rpx;
}

/* 顶部导航 */
.header {
  background: #fff;
  position: sticky;
  top: 0;
  z-index: 99;
}

.nav-bar {
  background-color: #fff !important;
}

.nav-title {
  font-weight: bold !important;
  font-size: 36rpx !important;
}

.search-bar {
  padding: 20rpx 30rpx !important;
}

/* 博文列表 */
.blog-list {
  padding: 30rpx;
}

.blog-item {
  background: #fff;
  border-radius: 16rpx;
  margin-bottom: 30rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.1);
}

.blog-cover {
  width: 100%;
  height: 360rpx;
}

.blog-content {
  padding: 20rpx;
}

.blog-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 12rpx;
}

.blog-desc {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 20rpx;
}

.blog-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.user-info {
  display: flex;
  align-items: center;
}

.avatar {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  margin-right: 12rpx;
}

.username {
  font-size: 28rpx;
  color: #333;
}

.like-info {
  display: flex;
  align-items: center;
  color: #666;
}

/* 写博文按钮 */
.write-btn {
  position: fixed !important;
  right: 40rpx !important;
  bottom: 40rpx !important;
  padding: 20rpx 40rpx !important;
  font-size: 28rpx !important;
  box-shadow: 0 4rpx 12rpx rgba(25,137,250,0.3) !important;
}

.tag-list {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  margin-bottom: 20rpx;
}

.tag-item {
  font-size: 24rpx;
  color: #666;
  background-color: #f5f5f5;
  padding: 4rpx 16rpx;
  border-radius: 20rpx;
}

.tag-item.active {
  color: #1989fa;
  background-color: rgba(25,137,250,0.1);
}

.interaction-info {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.info-item {
  display: flex;
  align-items: center;
  gap: 4rpx;
}

.info-item .count {
  font-size: 24rpx;
  color: #666;
}
/* 搜索提示样式 */
.search-tips {
  padding: 15px;
  font-size: 14px;
  color: #666;
  background-color: #f5f5f5;
  display: flex;
  justify-content: space-between;
}

.clear-search {
  color: #1989fa;
}

/* 搜索栏样式 */
.search-bar {
  background-color: transparent !important;
}

/* 加载状态提示 */
.loading-text {
  text-align: center;
  padding: 15px;
  color: #999;
  font-size: 14px;
}

/* 搜索容器 */
.search-container {
  background: #fff;
  padding: 10px 15px;
  position: sticky;
  top: 0;
  z-index: 100;
}

/* 时间搜索 */
.time-search {
  display: flex;
  align-items: center;
  margin-top: 10px;
  font-size: 14px;
}

.time-item {
  padding: 6px 12px;
  border-radius: 16px;
  background: #f7f8fa;
  color: #666;
}

.time-item.active {
  background: #e8f4ff;
  color: #1989fa;
}

.time-search text {
  margin: 0 8px;
  color: #999;
}

/* 搜索状态提示 */
.search-status {
  padding: 10px 15px;
  background: #f5f5f5;
}

.search-tips {
  font-size: 13px;
  color: #666;
}

.clear-all {
  margin-left: 10px;
  color: #1989fa;
}

.time-item[disabled] {
  opacity: 0.5;
  pointer-events: none;
}
/* 下拉刷新样式 */
.refresher {
  background-color: #f5f5f5;
}

/* 加载更多提示 */
.loading-more {
  text-align: center;
  padding: 20rpx;
  color: #999;
  font-size: 24rpx;
}